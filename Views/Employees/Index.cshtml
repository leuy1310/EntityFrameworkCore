@model List<EmpoyeeManage.Models.Domain.Employee> 

@{
}

<h1>Employee</h1>
<table class="table">
    <thead>
        <tr>
            @*<th scope="col">ID</th>*@
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                @*<th >@employee.Id</th>*@
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("d-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td>
                    <a class="btn btn-primary text-white" href="Employees/View/@employee.Id">View</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>